{
  "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", "dist"]
}